#!/usr/bin/env bash

if [ -z "$CNB_STACK_ID" ]; then
  # v2 API
  APP_DIR=$1
else
  PLATFORM_DIR=$1
  PLAN=$2
  # working is the cwd now
  # v3 API
  APP_DIR=$(pwd)
fi

if [ -f "$APP_DIR/Sluggerator" ]; then
  echo "Sluggerator will use your Sluggerator file"
  exit 0
fi

if [ -f "$APP_DIR/.slugignore" ]; then
  echo "Sluggerator will use your .slugignore file"
  exit 0
fi

exit 100
